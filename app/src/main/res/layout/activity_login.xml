<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <ImageView
          android:id="@+id/loginBackgroundImage"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:src="@drawable/img_1"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintHeight_percent=".30"
          android:scaleType="centerCrop" />
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/inner_constraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".75"
        app:layout_constraintVertical_bias="1">
        
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHeight_percent=".7"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/purple_200"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"/>
            
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"/>
            
        </com.google.android.material.tabs.TabLayout>
        
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="50sp"
            app:maxImageSize="50dp"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/fab_google_cloud"
            android:backgroundTint="@color/pinkWhite"/>
        
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="50sp"
            android:scaleType="centerCrop"
            app:maxImageSize="50dp"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="20sp"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toEndOf="@id/fabGoogle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/fab_facebook_cloud"
            android:backgroundTint="@color/pinkWhite"/>
    
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="50sp"
            android:scaleType="centerCrop"
            app:maxImageSize="50dp"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginRight="20sp"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fabGoogle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/fab_twitter_cloud"
            android:backgroundTint="@color/pinkWhite"/>
        
            
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>
  
  



</androidx.constraintlayout.widget.ConstraintLayout>